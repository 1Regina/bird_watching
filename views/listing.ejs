    <%- include('navigator_bar') -%>
        <div class="col-sm-10 text-right">
          <div class="dropdown">
            <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Arrange By
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="http://localhost:3004/listings-sortby/date/asc">Date (Earliest)</a></li>
            <li><a class="dropdown-item" href="http://localhost:3004/listings-sortby/date/desc">Date (Latest</a></li>          
            <li><a class="dropdown-item" href="http://localhost:3004/listings-sortby/behaviour/asc">Behaviour (A-Z)</a></li>
            <li><a class="dropdown-item" href="http://localhost:3004/listings-sortby/behaviour/desc">Behaviour (Z-A)</a></li>
            <li><a class="dropdown-item" href="http://localhost:3004/listings-sortby/flock_size/asc">Flock_size (A-Z)</a></li>
            <li><a class="dropdown-item" href="http://localhost:3004/listings-sortby/flock_size/desc">Flock_size (Z-A)</a></li>
            </ul>
          </div>
        </div>
        <div class="container">
        <div class="row">
          <div class="col-sm-12" style="padding-bottom: 30px;">
            <h1>All Sightings</h1> 
            <br>
            <br>
        <table class="table table-dark">
          <thead>
            <tr>
              <!-- <th scope="col"></th> -->
              <th scope="col">Index</th>
              <th scope="col"></th>
              <th scope="col">Sighted On</th>
              <th scope="col">Behaviour</th>
              <th scope="col">Flock Size</th>
              <th scope="col"></th>          
              <th scope="col">Action</th>
              <th scope="col"></th>
              <th scope="col"></th>              
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
        </table>
              
            <%let index=data.length %>
            <% for(let i=0; i < index; i +=1) { %>
            <!-- <ul> -->
             <!-- <div class="container"> -->
             <div class="shadow p-3 mb-5 bg-white rounded">
                <div class="row">
                  
                  <div class="col-sm-2">
                    <% let url = `/note/${i}` %> <% let text = `Sighting ${i+1}` %>
                    <a href="<%=url %>"><%=text %></a>
                  </div> 
                  
                  <div class="col-sm-2">
                    <% let date=data[i].date.toLocaleDateString()%>
                    <span><%=date%></span>
                  </div> 

                  <div class="col-sm-2">
                    <% let behaviour=data[i].behaviour%>
                    <span><%=behaviour%></span>
                  </div> 

                  <div class="col-sm-2">
                    <% let flock_size=data[i].flock_size%>
                    <span><%=flock_size%></span>
                  </div> 

                  <div class="col-sm-1">
               <% let update_id = `update ${i}` %>
                <form action="/note/<%=i%>/edit" method="GET">
                <input type="submit" value="Update" <%=id= update_id %>/>   
                </form>   
                  </div>      

                  <div class="col-sm-1">
              <% let delete_id = `delete ${i}` %>
                <form action="/note/<%=i%>/delete?_method=DELETE" method="POST">
                <input type="submit" value="Delete" <%=id= delete_id %>/>   
                </form>   
                  </div>
                  
                </div>    
             </div>
             <!-- </div>        -->
             <!-- </ul> -->
            <% } %>
          </div>  
        </div>
        </div>   
  </body>
