<%- include('navigator_bar') -%>
  <div class="col-sm-11 text-right">
    <div class="dropdown">
      <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Arrange By
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/notes-sortby/date/asc">Date (Earliest)</a>
        </li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/notes-sortby/date/desc">Date (Latest)</a>
        </li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/notes-sortby/behaviour/asc">Behaviour
            (A-Z)</a></li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/notes-sortby/behaviour/desc">Behaviour
            (Z-A)</a></li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/notes-sortby/flock_size/asc">Flock_size
            (Asc)</a></li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/notes-sortby/flock_size/desc">Flock_size
            (Desc)</a></li>
      </ul>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12" style="padding-bottom: 30px;">

        <h1>Hello <%=data[0].user_name%>
        </h1>
        <h5>All Sightings Submitted By You</h5>
        <br>
        <br>
        <table class="table table-dark">
          <thead>
            <tr>
              <!-- <th scope="col"></th> -->
              <th scope="col">Index</th>
              <th scope="col">Sighted On</th>
              <th scope="col">Behaviour</th>
              <th scope="col"></th>
              <th scope="col">Flock Size</th>
              <th scope="col">Species</th>
              <th scope="col">Creator</th>
              <th scope="col">Action</th>
              <th scope="col"></th>
            </tr>
          </thead>
        </table>

        <%let numOfRec=data.length %>
          <% for(let i=0; i < numOfRec; i +=1) { %>
            <!-- <ul> -->
            <!-- <div class="container"> -->
            <div class="shadow p-3 mb-5 bg-white rounded">
              <div class="row">

                <div class="col-sm-1">
                  <% let url=`/note/${data[i].notes_id}` %>
                    <% let text=`Note ${i+1}` %>
                      <a href="<%=url %>">
                        <%=text %>
                      </a>
                </div>

                <div class="col-sm-2">
                  <% let date=data[i].date%>
                    <span>
                      <%=date%>
                    </span>
                </div>

                <div class="col-sm-3">
                  <% data[i].action.forEach((act)=> {%>
                    <%let behaviour=`- ${act} `%>
                      <%=behaviour%>
                        <% }); %>
                </div>

                <div class="col-sm-1">
                  <% let flock_size=data[i].flock_size%>
                    <span>
                      <%=flock_size%>
                    </span>
                </div>

                <div class="col-sm-2">
                  <% let species=data[i].species%>
                    <span>
                      <%=species%>
                    </span>
                </div>

                <div class="col-sm-1 capitalize">
                  <% let user=data[i].user_name%>
                    <span>
                      <%=user%>
                    </span>
                </div>


                <div class="col-sm-1">
                  <% let update_id=`update ${data[i].id}` %>
                    <form action="/note/<%=data[i].notes_id%>/edit" method="GET">
                      <input type="submit" value="Update" <%=id=update_id %>/>
                    </form>
                </div>
              </div>
            </div>
            <!-- </div>        -->
            <!-- </ul> -->
            <% } %>
      </div>
    </div>
  </div>


  <div class="col-sm-11 text-right">
    <div class="dropdown">
      <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Arrange By
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/comments-sortby/date/asc">Date (Earliest)</a>
        </li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/comments-sortby/date/desc">Date (Latest)</a>
        </li>

        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/comments-sortby/noteId/asc">Note
            (Asc)</a></li>
        <li><a class="dropdown-item" href="http://localhost:3004/users/:id/comments-sortby/noteId/desc">Note
            (Desc)</a></li>
      </ul>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12" style="padding-bottom: 30px;">

        <div>
          <h1>Your Comments</h1>

          <%commentary.forEach((oneComment)=> {%>
            <div class="shadow p-3 mb-5 bg-white rounded">
              <div class="row">

                <div class="col-sm-2">
                  <% let note_url=`/note/${oneComment.notes_id}` %>
                    <% let displayNote=`Note ${oneComment.notes_id}` %>
                      <a href="<%=note_url%>">
                        <%=displayNote %>
                      </a>
                </div>
                <div class="col-sm-10">

                  <%=oneComment.text%>
                </div>
              </div>

            </div>
            <%});%>
        </div>
      </div>
    </div>
  </div>
  </body>

