    <%- include('navigator_bar') -%>

      <div class="container"> 
        <h1>Details of Species</h1>

            <div class="container">
               <div class="col-sm-12 text-right">
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                   <% let update_id = `update ${ind}` %>
                      <form action="/species/<%=ind%>/edit" method="GET">
                        <input type="submit" value="Update" <%=id= update_id %> class="btn btn-dark"/>   
                          </form>   
                            <% let delete_id = `delete ${ind}` %>
                          <form action="/species/<%=ind%>/delete?_method=DELETE" method="POST">
                        <input type="submit" value="Delete" <%=id= delete_id %> class="btn btn-dark"/>   
                      </form>
                  </div>    
               </div>
            </div>    
        <br>
        <div class="shadow p-3 mb-5 bg-white rounded capitalize">
          <%for (const [key, value] of Object.entries(details)) {%>
        
            <ul><h6><%=key%></h6>
              <p class="text-muted "><%=value%></p>
            </ul>
        
          <%}%>
        </div>
      </div>
  </body>
