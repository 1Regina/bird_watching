        <label for="behaviour" class="form-label "><h5>Behaviour:</h5></label>
        <div class = "w-25">
     
          <select class="custom-select" id="behaviour" name="BEHAVIOUR" required >
            <option selected>Choose...</option>
            <option value="bob_tail">bob tail</option>
            <option value="head_cock">head cock</option>
            <option value="wing_stretches">wing stretches</option>
          </select>
        </div>
      <!-- </div> -->

      <br>
      <div class="mb-3 mt-3">
        <label for="flock_size" class="form-label"><h5>Flock Size</h5></label>
        <input type="number" min="1" class="form-control w-25" id="flock_size" placeholder="Enter the flock size observed" name="FLOCK_SIZE" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>
      <br>
       <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
  </div>
</body>
