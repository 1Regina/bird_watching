  <%- include("navigator_bar") -%>
  <div class="container">
    <h1> Record A New Sighting</h1>
    <br>
    <form action = "/note" method="POST" class=".needs-validation">

        <label for="date" class="form-label "><h5>Date:</h5></label>
        <input type="date" class="form-control w-25 " data-date-end-date="0d" id="date" placeholder="Enter date before today" name="DATE" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      <br>

        <label for="species" class="form-label "><h5>Species:</h5></label>
        <div class = "w-50">
          <select class="custom-select" id="species" name = "SPECIES" required>
            <option selected>Choose...</option>
            <% birdName.forEach((species) => {%>
            <option value = "<%= species.name %>"><%= species.name %></option>
            <% }); %> 
          </select>
        </div>    
      <br>
      <!-- <div class="mb-3 mt-3">
